<h1 style="text-align: center;">Real Time Products</h1>

<div class="formulario-contenedor">
    <h2 style="margin-top: 40px;">Agregue su producto aca</h2>
    <h3 style="margin-top: 30px;">Los productos agregados se encuentran abajo</h3>
    <div class="formulario">
        <label for="title">Name</label>
        <input type="text" id="title" name="title" placeholder="Nombre del producto">
        <label for="description">Description</label>
        <input type="text" id="description" name="description" placeholder="Descripcion del producto">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="Precio del producto">
        {{!-- <label for="thumbnail">Upload Files:</label>
        <input type="file" id="thumbnail" name="thumbnail" placeholder="Thumbnail"> --}}
        <label for="category">Category</label>
        <input type="text" id="category" name="category" placeholder="category">
        <label for="code">Code</label>
        <input type="text" id="code" name="code" placeholder="code">
        <label for="stock">Stock</label>
        <input type="number" id="stock" name="stock" placeholder="Stock del producto">
        <button onclick="send('{{email}}');" id="submit-button">Agregar</button>
    </div>
</div>

<div id="productos" data-email='{{email}}'>
    {{#each products}}
        <div class="product-card">
            <h3>{{this.title}}</h3>
            <hr>
            <p>Categoria: {{this.category}}</p>
            <p>Descripción: {{this.description}}</p>
            <p>Precio: $ {{this.price}}</p>
            <p>Dueño: {{this.owner}}</p>
            <button id="button-delete" data-email='{{email}}' onclick="deleteProduct('{{this._id}}')">Eliminar</button>
        </div>
    {{/each}}
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
