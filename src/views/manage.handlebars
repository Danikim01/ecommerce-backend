<div style="display: flex;flex-direction:column;align-items:center;height:100vh;justify-content:space-between">
    <h1 style="margin-top: 30px;">Usuarios:</h1>
    {{#if isValid}}
        <div class="users-manage-box" id="users-box">
            {{#each users}}
                <div class="user-card">
                    <h3>{{this.full_name}}</h3>
                    <p>{{this.email}}</p>
                    <p>{{this.role}}</p>
                    <a href="" class="button-home" onclick="deleteUser('{{this.id}}')">Eliminar</a>
                    <a href="" class="button-home" onclick="changeRole('{{this.id}}')">Cambiar Rol</a>
                </div>
            {{/each}}
        </div>    
    {{else}}
        <h2>No hay usuarios</h2>
    {{/if}}
    <a href="/home" class="button-home">Inicio</a>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/user.js"></script>